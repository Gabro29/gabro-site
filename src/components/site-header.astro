---
import { siteConfig } from "../data/site.config";
---

<nav
    class="sticky top-0 z-50 bg-[#0a0a0a]/90 backdrop-blur-md border-b border-gray-800"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20 items-center">
            <a
                href="/"
                class="font-bold text-2xl tracking-tighter uppercase text-white relative z-50 transition-colors"
            >
                Gabro<span class="text-blue-500">.</span>
            </a>

            <!-- Desktop Menu -->
            <div
                class="hidden md:flex space-x-12 text-sm font-medium tracking-widest uppercase text-gray-400"
            >
                {
                    siteConfig.navLinks.map((link) => (
                        <a
                            href={link.href}
                            class="hover:text-blue-400 transition-colors"
                        >
                            {link.text}
                        </a>
                    ))
                }
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="menu-toggle"
                class="md:hidden text-white focus:outline-none relative z-50 p-2"
            >
                <span class="sr-only">Open main menu</span>
                <svg
                    class="h-8 w-8"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</nav>
